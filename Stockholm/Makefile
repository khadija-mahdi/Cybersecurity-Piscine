NAME = stockholm.py

run:
	@echo ""
	@echo "ðŸš€ Running $(NAME)..."
	@echo ""
	python3 $(NAME) 

version:
	@python3 $(NAME) -v

help:
	@python3 $(NAME) -h

reverse:
	@read -p "Enter decryption key: " key; \
	python3 $(NAME) -r $$key

silent:
	@python3 $(NAME) -s

all:
	@echo "Available commands:"
	@echo "  make run       â†’ Run the script normally"
	@echo "  make version   â†’ Show version info"
	@echo "  make help      â†’ Show help message"
	@echo "  make reverse   â†’ Prompt for decryption key and run reverse mode"
	@echo "  make silent    â†’ Run in silent mode"
